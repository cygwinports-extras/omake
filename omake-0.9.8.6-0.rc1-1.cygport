inherit ocaml

DESCRIPTION="OCaml build system"
HOMEPAGE="http://omake.metaprl.org/"
SRC_URI="http://omake.metaprl.org/downloads/${P}.tar.gz"
SRC_DIR=${P%-*}

PATCH_URI="
	http://patch-tracker.debian.org/patch/series/dl/${PN}/0.9.8.5-3-8/0004-Disable-warnings-introduced-in-OCaml-3.12.patch
	0.9.8.6-as-needed.patch
	0.9.8.6-ncurses-ncurses.h.patch
"

src_compile() {
	lndirs
	cd ${B}
	export PREFIX=/usr
	cygmake all
}

src_install() {
	cd ${B}
	INSTALL_ROOT=${D} cyginstall
}
